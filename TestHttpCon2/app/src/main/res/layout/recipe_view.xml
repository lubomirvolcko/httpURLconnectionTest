<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="175dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_recipe">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/recipe_label"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:text="Recipe Label"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_italic"
                android:background="@drawable/recipe_label"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

        <Button
                android:id="@+id/btnFav"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_fav_empty"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:shadowColor="#000000"
                android:shadowRadius="5"
                android:shadowDy="5"
                android:shadowDx="5"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="15dp"
            android:orientation="horizontal"
            android:background="@drawable/recipe_view_bg">

        <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_italic"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:shadowColor="#000000"
                android:shadowRadius="5"
                android:shadowDy="5"
                android:shadowDx="5"/>


        <TextView
                android:id="@+id/recipe_num_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_italic"
                android:layout_alignBottom="@+id/starView"
                android:layout_toStartOf="@+id/starView"
                android:layout_marginEnd="7dp"
                android:layout_toLeftOf="@+id/starView"
                android:shadowColor="#000000"
                android:shadowRadius="5"
                android:shadowDy="5"
                android:shadowDx="5"/>

        <ImageView
                android:id="@+id/starView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_review"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentBottom="true"
                android:shadowColor="#000000"
                android:shadowRadius="5"
                android:shadowDy="5"
                android:shadowDx="5"/>

    </RelativeLayout>

</LinearLayout>